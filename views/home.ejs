<%- include("partials/header"); -%>
<body>
  <section class="title">
    <div class="bgpurple shadow">
      <h1>Blogs</h1>
      <p><%= startingContent %></p>
    </div>

    <% posts.forEach(function(post){ %>
    <div class="bgpink shadow">
      <h1><%=post.title%></h1>
      <p>
        <%=post.content.substring(0, 400) + " ..."%>
        <a href="/posts/<%=post._id%>">Read More</a>
      </p>
    </div>
    <% }) %>
  </section>
  <%- include("partials/footer"); -%>
</body>
