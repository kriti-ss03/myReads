<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <title>MyReads</title>
    <meta charset="utf-8" />

    <!-- FONT -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;700&display=swap"
      rel="stylesheet"
    />

    <!-- CSS -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="navbar-header">
        <p class="navbar-brand"><a href="/">ðŸ”™</a></p>
      </div>
      <div
        class="nav navbar-nav navbar-right"
        style="margin-right: 80px; margin-top: 10px"
      >
        <p id="home"><a href="/feed">Check Feed</a></p>
      </div>
    </nav>

    <section class="title cta">
      <div class="bgpurple shadow">
        <h1>Register</h1>
      </div>

      <div class="form-group">
        <!-- PINK BOX -->
        <div class="bgpink shadow">
          <form class="" action="/register" method="post">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="username" />
            <div class="up">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" />
            </div>

            <button
              style="margin-top: 20px"
              class="btn btn-warning btnx"
              type="submit"
              name="button"
            >
              Register
            </button>
          </form>
          <!-- GOOGLE -->
          <hr style="border-top: 1px solid rgb(64, 64, 64)" />

          <p style="text-align: center">OR</p>

          <button
            class="btn btn-lg btn-block btn-danger btnx"
            onclick="location.href='/auth/google'"
            style="background-color: #b93737"
            type="submit"
          >
            <i class="fa-brands fa-google"></i> Continue with google
          </button>
        </div>
      </div>
    </section>
  </body>
</html>
